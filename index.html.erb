<h1> Products List </h1>

<table>
  <tr>
    <th> Product Name </th>
    <th> Status </th>
    <th> Action </th>
  </tr>

  <% @products.each do |product| %>
    <td><%= product.name %> </td>
    <td><%= product.text %> </td>
    <td><%= link_to 'Show', product_path(product) %></td>
  <% end %>

</table>
